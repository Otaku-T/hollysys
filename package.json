{
  "name": "hollysys",
  "displayName": "hollysys",
  "description": "这是一个hollysys组态软件MACS的插件",
  "version": "1.3.0",
  "publisher": "xchsr",
  "license": "MIT",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],  
  "activationEvents": [
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "st",
        "extensions": [
          ".st"
        ],
        "aliases": [
          "ST",
          "Structured Text"
        ],
        "configuration": "./syntaxes/language-configuration.json" 
      }
    ],
    "grammars": [
      {
        "language": "st",
        "scopeName": "source.st",
        "path": "./syntaxes/st.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "hollysys.hollysys",
        "title": "新建hollysys"
      },
      {
        "command": "hollysys.hollysysExcel",
        "title": "更新excel"
      },
      {
        "command": "hollysys.hollysysSTExcel",
        "title": "更新ST变量表"
      },
      {
        "command": "hollysys.hollysysST",
        "title": "生成ST顺控"
      },
      {
        "command": "hollysys.hollysysPOU",
        "title": "替换POU"
      },
      {
        "command": "hollysys.hollysysPID",
        "title": "生成回路"
      },
      {
        "command": "hollysys.hollysysHIM",
        "title": "修改画面"
      },      
      {
        "command": "hollysys.hollysysPOUExcel",
        "title": "更新POU变量表"
      },
      {
        "command": "hollysys.hollysysSTPOU",
        "title": "替换ST"
      },
      {
        "command": "hollysys.hollysysDATA",
        "title": "数据分类"
      },      
      {
        "command": "hollysys.hollysysPY",
        "title": "转换python"
      },
      {
        "command": "hollysys.hollysysBF",
        "title": "备份excel文件"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "hollysys.hollysys",
          "group": "999_navigation"
        },
        {
          "command": "hollysys.hollysysExcel",
          "group": "999_navigation"
        },
        {
          "command": "hollysys.hollysysSTExcel",
          "when": "resourceLangId == st",
          "group": "999_navigation"
        },
        {
          "command": "hollysys.hollysysPOUExcel",
          "when": "resourceLangId == xml",
          "group": "999_navigation"
        },
        {
          "command": "hollysys.hollysysST",
          "when": "resourceFilename  == ST框架.xlsx ",
          "group": "999_navigation"
        },
        {
          "command": "hollysys.hollysysPOU",
          "when": "resourceFilename  == 点名替换.xlsx ",
          "group": "999_navigation"
        },
        {
          "command": "hollysys.hollysysHIM",
          "when": "resourceFilename  == 画面修改.xlsx ",
          "group": "999_navigation"
        },
        {
          "command": "hollysys.hollysysPID",
          "when": "resourceFilename  == 典型回路.xlsx ",
          "group": "999_navigation"
        },
        {
          "command": "hollysys.hollysysSTPOU",
          "when": "resourceFilename  == ST变量表.xlsx ",
          "group": "999_navigation"
        },
        {
          "command": "hollysys.hollysysDATA",
          "when": "resourceFilename  == 数据库.xlsx ",
          "group": "999_navigation"
        },
        {
          "command": "hollysys.hollysysPY",
          "when": "resourceLangId == st",
          "group": "999_navigation"
        },
        {
          "command": "hollysys.hollysysBF",
          "group": "999_navigation"
        }
      ]
    },
    "resourceFiles": [
        {
            "path": "./stmould/HOLLYSYS.ST",
            "type": "file"
        }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "fast-xml-parser": "^4.5.0",
    "xlsx": "^0.18.5"
  },
  "icon": "icons/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Otaku-T/hollysys"
  },
  "files": [
    "dist", 
    "syntaxes", 
    "stmould",
    "icons", 
    "README.md",
    "LICENSE.md"
  ]
}
